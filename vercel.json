{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "vercel-sapper"
        }
    ],
    "regions": ["cdg1"],
    "public": true,
    "env": {
        "NODE_ENV": "production"
    },
    "headers": [
        { "source": "/(.*)[.]svg",
          "headers": [ { "key": "cache-control",
                         "value": "s-maxage=36000" } ] },
        { "source": "/(.*)[.]png",
          "headers": [ { "key": "cache-control",
                         "value": "s-maxage=36000" } ] },
        { "source": "/(.*)[.]css",
          "headers": [ { "key": "Content-Type",
                         "value": "text/css; charset=UTF-8" } ] },
        { "source": "/(.*)[.]txt",
          "headers": [ { "key": "Content-Type",
                         "value": "text/plain; charset=UTF-8" } ] },
        { "source": "/(.*)[.]xml",
          "headers": [ { "key": "Content-Type",
                         "value": "text/xml; charset=UTF-8" } ]  }
    ]
}
